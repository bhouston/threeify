{
  "compilerOptions": {
    "baseUrl": "./packages",
    "paths": {
      "@threeify/math": ["./packages/math/"],
      "@threeify/core": ["./packages/core/"],
      "@threeify/scene": ["./packages/scene/"],
      "@threeify/layer-compositor": ["./packages/layer-compositor/"]
    },
    "esModuleInterop": true,
    "moduleResolution": "node",
    "lib": ["es2020", "dom"],
    "module": "ESNext",
    "target": "ESNext",
    "declaration": true,
    "stripInternal": true,
    "typeRoots": ["node_modules/@types"],
    "resolveJsonModule": true,

    // Components of "strict" mode.
    "alwaysStrict": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "noImplicitThis": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true
  }
}

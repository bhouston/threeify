{
  "compilerOptions": {
    "target": "es2020",
    "module": "esnext",
    "declaration": true,
    "sourceMap": true,
    "declarationMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "removeComments": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": false
  },
  "include": [
    "src/**/*.ts"
  ],
  "typedocOptions": {
    "mode": "modules",
    "out": "./docs",
    "gaID": "UA-172098276-1",
    "gaID": "threeify.org"
  }
}
{
  "name": "@threeify/core",
  "description": "Typescript 3D Library loosely based on three.js",
  "version": "4.0.2",
  "type": "module",
  "types": "./dist/index.d.ts",
  "module": "./dist/index.js",
  "source": "./src/index.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js"
    },
    "./dist/*": "./dist/*",
    "./src/*": "./src/*"
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "threeify-build src/index.ts",
    "dev": "threeify-build src/index.ts  --watch",
    "types": "tsc --emitDeclarationOnly --outDir dist --watch"
  },
  "dependencies": {
    "@threeify/math": "*"
  },
  "devDependencies": {
    "@threeify/build": "*"
  }
}

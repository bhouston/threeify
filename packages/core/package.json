{
  "name": "@threeify/core",
  "description": "Typescript 3D Library loosely based on three.js",
  "version": "4.0.3",
  "type": "module",
  "types": "./dist/index.d.ts",
  "main": "./dist/index.js",
  "source": "./src/index.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js"
    },
    "./dist/*": "./dist/*",
    "./src/*": "./src/*"
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "glsl-transpiler -r src -o src && tsc",
    "dev": "glsl-transpiler -r src -o src --watch & tsc --watch"
  },
  "dependencies": {
    "@threeify/math": "^4.0.3"
  },
  "devDependencies": {
    "@threeify/build": "*",
    "@threeify/glsl-transpiler": "^4.0.3"
  }
}

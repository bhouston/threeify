{
  "name": "@threeify/core",
  "description": "Typescript 3D Library loosely based on three.js",
  "version": "4.0.2",
  "type": "module",
  "exports": {
    "types": "./dist/core.d.ts",
    "require": "./dist/core.cjs",
    "default": "./dist/core.modern.js"
  },
  "types": "./dist/core.d.ts",
  "main": "./dist/core.cjs",
  "module": "./dist/core.modern.js",
  "source": "./src/core.ts",
  "browserslist": [
    "defaults",
    "not IE 11",
    "node >= 14"
  ],
  "scripts": {
    "build": "glsl-transpiler && microbundle --format modern,cjs --define PACKAGE_VERSION=$npm_package_version",
    "watch": "glsl-transpiler --watch & microbundle watch --format modern,cjs --define PACKAGE_VERSION=$npm_package_version",
    "watch:debug": "glsl-transpiler --watch & microbundle watch --format modern,cjs --define PACKAGE_VERSION=$npm_package_version --no-compress"
  },
  "keywords": [
    "threeify",
    "webgl",
    "webgpu",
    "3D"
  ],
  "homepage": "http://bhouston.github.com/threeify",
  "author": "threeify authors",
  "bugs": {
    "url": "https://github.com/bhouston/threeify/issues"
  },
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/bhouston/threeify"
  },
  "devDependencies": {
    "@threeify/glsl-transpiler": "*",
        "@types/jest": "^29.1.1",
    "@types/offscreencanvas": "^2019.7.0",
    "jest": "^29.1.2",
    "ts-jest": "^29.0.3",
    "ts-jest-resolver": "^2.0.0",
    "typescript": "4.8.4"
  },
  "dependencies": {

    "@threeify/math": "*"
  }
}

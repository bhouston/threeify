{
  "name": "@threeify/scene",
  "description": "Typescript 3D Library loosely based on three.js",
  "version": "3.0.0",
  "type": "module",
  "types": "./dist/index.d.ts",
  "module": "./dist/index.js",
  "source": "./src/index.ts",
  "scripts": {
    "build": "esbuild src/index.ts --format=esm --bundle --sourcemap --outfile=dist/index.js",
    "dev": "esbuild src/index.ts --format=esm --bundle --sourcemap --outfile=dist/index.js --watch",
    "types": "tsc --emitDeclarationOnly --outDir dist --watch"
  },
  "devDependencies": {
    "@types/draco3dgltf": "^1.4.0",
    "@threeify/esbuild-plugin-glsl-transpiler": "*"
  },
  "dependencies": {
    "@threeify/core": "*",
    "@threeify/math": "*",
    "draco3dgltf": "^1.5.5",
    "meshoptimizer": "^0.18.1"
  }
}

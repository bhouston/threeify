{
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "incremental": false,
    "outDir": "./dist",
    "target": "ES2020",
    "module": "ES2020",
    "sourceMap": true,
    "rootDir": "./src",
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "removeComments": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "jsx": "react",
    "lib": ["dom", "es2020"]
  },
  "include": ["./src/**/*.ts", "./src/**/*.tsx", "./src/**/*.json"],
  "exclude": ["./**/*.test.ts"],
  "references": [
    { "path": "../packages/math" },
    { "path": "../packages/core" },
    { "path": "../packages/scene" }
  ]
}

{
  "name": "@threeify/esbuild-plugin-glsl-transpiler",
  "version": "4.0.2",
  "type": "module",
  "types": "./dist/index.d.ts",
  "module": "./dist/index.js",
  "main": "./dist/index.js",
  "source": "./src/index.ts",
  "scripts": {
    "build": "esbuild src/index.ts  --platform=node --format=esm --sourcemap --bundle --outfile=dist/index.js",
    "dev": "esbuild src/index.ts --platform=node --format=esm --sourcemap --bundle --outfile=dist/index.js --watch",
    "types": "tsc --emitDeclarationOnly --outDir dist --watch"
  }
}

{
  "name": "threeify",
  "version": "1.87.0",
  "description": "Typescript 3D Library loosely based on three.js",
  "type": "module",
  "main": "dist/lib",
  "types": "dist/lib/index.d.ts",
  "files": [
    "dist"
  ],
  "keywords": [
    "threeify",
    "webgl",
    "webgpu",
    "3D"
  ],
  "homepage": "http://threeify.org",
  "author": "threeify authors",
  "bugs": {
    "url": "https://github.com/threeify/threeify/issues"
  },
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/threeify/threeify"
  },
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^14.1.0",
    "@types/jest": "^26.0.0",
    "@types/offscreencanvas": "^2019.7.0",
    "@typescript-eslint/eslint-plugin": "^5.30.7",
    "@typescript-eslint/parser": "^5.30.7",
    "eslint": "^8.20.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsx-a11y": "^6.6.0",
    "eslint-plugin-react": "^7.30.1",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "eslint-plugin-unused-imports": "^2.0.0",
    "jest": "^29.1.2",
    "rollup": "^2.79.1",
    "threeify-glsl-transpiler": "^2.0.1",
    "ts-jest": "^29.0.3",
    "typedoc": "^0.23.15",
    "typescript": "^4.8.4"
  },
  "scripts": {
    "build": "tgt; tsc",
    "dev": "npm run watch & npm start",
    "lint": "eslint \"src/**\"",
    "lint:fix": "npm run lint -- --fix",
    "start": "npm run watch & web-dev-server --node-resolve --watch --open --app-index ./examples/index.html",
    "docs": "typedoc",
    "test": "jest ./src",
    "watch": "tsc --watch --preserveWatchOutput & tgt --watch",
    "prepare": "npm run build"
  }
}
{
  "name": "threeify",
  "version": "2.1.0",
  "private": true,
  "description": "Typescript 3D Library loosely based on three.js",
  "keywords": [
    "threeify",
    "webgl",
    "webgpu",
    "3D"
  ],
  "homepage": "http://bhouston.github.com/threeify",
  "author": "threeify authors",
  "bugs": {
    "url": "https://github.com/bhouston/threeify/issues"
  },
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/bhouston/threeify"
  },
  "devDependencies": {
    "@types/jest": "^29.1.1",
    "@types/offscreencanvas": "^2019.7.0",
    "@types/react-dom": "^18.0.10",
    "@typescript-eslint/eslint-plugin": "^5.38.1",
    "@web/dev-server": "^0.1.35",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-promise": "^6.0.1",
    "eslint-plugin-simple-import-sort": "^8.0.0",
    "eslint-plugin-unicorn": "^44.0.0",
    "eslint-plugin-unused-imports": "^2.0.0",
    "jest": "^29.1.2",
    "prettier": "^2.7.1",
    "prettier-plugin-glsl": "^0.0.8",
    "ts-jest": "^29.0.3",
    "ts-jest-resolver": "^2.0.0",
    "typedoc": "^0.23.15",
    "typescript": "4.8.4"
  },
  "scripts": {
    "clean": "find . -name 'dist' -type d -prune -exec rm -rf {} + && find . -name 'tsconfig.tsbuildinfo' -type f -delete",
    "build": "tsc --build && tst --projectDir \"./packages/core\" && tst --projectDir \"./packages/scene\" && tst --projectDir \"./packages/layer-compositor\" && tst --projectDir \"./examples\"",
    "watch": "tsc --build  --watch --preserveWatchOutput & tst --projectDir \"./packages/core\" --watch & tst --projectDir \"./packages/scene\" --watch & tst --projectDir \"./packages/layer-compositor\" --watch & tst --watch --projectDir \"./examples\"",
    "start": "npm run watch & web-dev-server --watch --app-index examples/index.html --node-resolve --open",
    "format": "prettier \"examples/src/**/*.{ts,json,glsl}\" \"packages/**/src/**/*.{ts,json,glsl}\" --check --write && eslint \"examples/**/*.{ts,json}\" \"packages/*/src/*.{ts,json}\" --fix",
    "docs": "typedoc",
    "test": "jest"
  },
  "workspaces": [
    "packages/shader-transpiler",
    "packages/math",
    "packages/core",
    "packages/scene",
    "packages/layer-compositor",
    "examples"
  ],
  "dependencies": {
    "@gltf-transform/core": "^2.5.1",
    "@gltf-transform/extensions": "^2.5.1",
    "@threeify/shader-transpiler": "*"
  }
}
